    <script>
        function decodeHtmlEntities(text) {
            var textArea = document.createElement('textarea');
            textArea.innerHTML = text;
            return textArea.value;
        }

        const ordersString = '<%= JSON.stringify(daily) %>';
        const orders = JSON.parse(decodeHtmlEntities(ordersString));
        console.log(orders);

    document.addEventListener("DOMContentLoaded", function () {
        const menuItems = document.querySelectorAll(".menu-item");

        menuItems.forEach(function (menuItem) {
            menuItem.addEventListener("click", function () {
                // Remove "active" class from all menu items
                menuItems.forEach(function (item) {
                    item.classList.remove("active");
                });

                // Add "active" class to the clicked menu item
                menuItem.classList.add("active");
            });
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
    // Assuming that the `daily` data is an array of daily sales data
    const dailyData ='<%= JSON.stringify(daily) %>';

    // Extract the relevant data for the chart (e.g., sales data for each day)
    const dates = dailyData.map((entry) => entry.date); // Assuming there's a date field in your data
    const sales = dailyData.map((entry) => entry.sales); // Assuming there's a sales field in your data

    // Get a reference to the canvas element
    const ctx = document.getElementById("myChart").getContext("2d");

    // Create the chart
    const myChart = new Chart(ctx, {
        type: "line",
        data: {
            labels: dates, // X-axis labels (dates)
            datasets: [
                {
                    label: "Daily Sales",
                    data: sales, // Y-axis data (sales)
                    borderColor: "blue", // Line color
                    borderWidth: 1,
                },
            ],
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                },
            },
        },
    });
});



