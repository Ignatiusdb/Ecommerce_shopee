    //Category UNlisting
    function toggleCategoryStatus(categoryId, currentStatus) {
      let newStatus;
  
      Swal.fire({
          title: 'Are You Sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: `Yes ${newStatus === 'active' ? 'List' : 'Unlist'}`,
      }).then((result) => {
          if (!result.isConfirmed) {
              return;
          } else {
              fetch('category-management/update-status/' + categoryId, {
                  method: 'PATCH',
               
              })
                  .then((res) => res.json())
                  .then((data) => {
                      console.log(data);
                      Swal.fire(`${newStatus === 'active' ? 'Listed' : 'Unlisted'} Successfully`, '', 'success');
