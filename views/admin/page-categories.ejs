        <!-- Modal for creating a category -->
        <div class="modal fade" id="createCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create Category</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="/admin/category-management/newCategory"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name" class="form-label">Category Name:</label>
                                <input type="text" id="name" name="name" class="form-control" required>
                                <div id="validationMessage" class="alert alert-danger" style="display: none;"></div>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Category Description:</label>
                                <textarea id="description" name="description" class="form-control" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Category Image:</label>
                                <input type="file" id="image" name="image" accept="image/*" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="editName">Discount</label><br>
                                <input type="text" class="form-control" id="editDiscount"
                                    name="discount" value="" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Category</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <table class="table align-middle mb-0  bg-white">
            <thead class="bg-light text-center">
                <tr>
                    <th>S.No</th>
                    <th>Image</th>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th colspan="2">Actions</th>

                </tr>
            </thead>
            <tbody class="text-center">
                <% categories.forEach((category, index)=> { %>
                    <tr>
                        <td>
                            <%= index+1 %>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <% if (category.image) { %>
                                    <img src="/<%= category.image %>" alt="<%= category.name %> Image"
                                        style="width: 45px; height: 45px" class="rounded-circle" />
                                    <% } %>

                        </td>
                        <td>
                            <div class="ms-3">
                                <p class="fw-bold mb-1">
                                    <%= category.name %>
                                </p>
                            </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">
                                <%= category.description %>
                            </p>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" style="height: 40px; display: flex;"
                                data-bs-toggle="modal" data-bs-target="#editModal<%= category._id %>"
                                data-category-id="<%= category._id %>">
                                <i class="fa fa-edit"></i> Edit
                            </button>

                            <!-- Modal for editing category -->
                            <div class="modal fade" id="editModal<%= category._id %>" tabindex="-1" role="dialog"
                                aria-labelledby="editModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editModalLabel">Edit Category</h5>
                                            <button type="button" class="close" data-bs-dismiss="modal"
                                                aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- Edit category form -->
                                            <form method="POST"
                                                action="/admin/category-management/editCategory/<%= category._id %>">
                                                <div class="form-group mb-3">
                                                    <label for="editName">Name:</label><br>
                                                    <input type="text" class="form-control" id="editName"
                                                        name="editName" value="<%= category.name %>" required>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <label for="editDescription">Description:</label>
                                                    <br>
                                                    <textarea class="form-control" id="editDescription"
                                                        name="editDescription"
                                                        required><%= category.description %></textarea>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="editImage">Category Image:</label>
                                                    <br>
                                                    <% if (category.image) { %>
                                                        <img src="/<%= category.image %>"
                                                            alt="<%= category.name %> Image" style="max-width: 100%;"
                                                            height="50px" />
                                                        <input type="file" class="form-control mt-2" id="editImage"
                                                            name="editImage" accept="image/*">
                                                        <% } else { %>
                                                            <input type="file" class="form-control" id="editImage"
                                                                name="editImage" accept="image/*">
                                                            <% } %>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="editName">Discount</label><br>
                                                    <input type="text" class="form-control" id="editDiscount"
                                                        name="discount" value="<%= category.discount %>" required>
                                                </div>


                                                <!-- Add additional fields as needed -->
                                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <button type="button" class="btn" style="height: 40px; display: flex;"
                            onclick="toggleCategoryStatus('<%= category._id %>', '<%= category.status %>')"
                            id="categoryButton-<%= category._id %>">
                        <span id="categoryButtonText-<%= category._id %>">
                            <% if (category.status === 'active') { %>
                              <i class="fa-regular fa-eye" style="color: #000000;"></i>  Unlist
                            <% } else { %>
                              <i class="fa-solid fa-eye-slash" style="color: #000000;"></i> List
                            <% } %>
                        </span>
                    </button>
                        </td>
                        
                        <script>
                            function deleteCategory(categoryId) {
                                // Display a confirmation dialog
                                Swal.fire({
                                    title: 'Delete Category',
                                    text: 'Are you sure you want to delete this category?',
                                    icon: 'warning',
                                    showCancelButton: true,
                                    confirmButtonText: 'Delete',
                                    cancelButtonText: 'Cancel'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        fetch('/admin/category-management/deleteCategory/' + categoryId, {
                                            method: 'DELETE'
                                        })
                                        .then(response => {
                                            if (response.ok) {
                                                // Category was successfully deleted
                                                Swal.fire('Deleted', 'Category has been deleted', 'success');
                                                window.location.reload();
                                            } else {
                                                // Handle error
                                                Swal.fire('Error', 'An error occurred while deleting the category.', 'error');
                                            }
                                        });
                                    }
                                });
                            }
                        
                            document.addEventListener("DOMContentLoaded", function () {
                                const form = document.getElementById("createCategoryForm");
                                const editForm = document.getElementById("categoryEditForm");
                        
                                form.addEventListener("submit", function (event) {
                                    let valid = true;
                        
                                    // Validation for Category Name
                                    const categoryName = document.getElementById("name").value.trim();
                                    if (categoryName === "") {
                                        valid = false;
                                        alert("Please enter a Category Name");
                                    }
                        
                                    // Validation for Category Description
                                    const categoryDescription = document.getElementById("description").value.trim();
                                    if (categoryDescription === "") {
                                        valid = false;
                                        alert("Please enter a Category Description");
                                    }
                        
                                    // Validation for Category Image
                                    const imageInput = document.getElementById("image");
                                    const uploadedFile = imageInput.files[0];
                        
                                    if (!uploadedFile) {
                                        valid = false;
                                        alert("Please upload an image");
                                    } else {
                                        const allowedFormats = ["image/jpeg", "image/png", "image/gif"];
                        
                                        if (allowedFormats.indexOf(uploadedFile.type) === -1) {
                                            valid = false;
                                            alert("Please upload a valid image file (JPEG, PNG, GIF)");
                                        }
                                    }
                        
                                    if (!valid) {
                                        event.preventDefault(); // Prevent form submission if validation fails
                                    }
                                });
                        
                                editForm.addEventListener("submit", function (event) {
                                    let valid = true;
                        
                                    // Validation for Category Name
                                    const categoryName = document.getElementById("name").value.trim();
                                    if (categoryName === "") {
                                        valid = false;
                                        alert("Please enter a Category Name");
                                    }
                        
                                    // Validation for Category Description
                                    const categoryDescription = document.getElementById("description").value.trim();
                                    if (categoryDescription === "") {
                                        valid = false;
                                        alert("Please enter a Category Description");
                                    }
                        
                                    if (!valid) {
                                        event.preventDefault(); // Prevent form submission if validation fails
                                    }
                                });
                            });
                        </script>
                        
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>





